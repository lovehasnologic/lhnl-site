        .block
          %article.article
            %header.article__header
              %h1.article__title= current_article.title
              %time.article__date{ datetime: current_article.date.strftime('%F') }
                = current_article.date.strftime("%B â€™%y")
              - if current_article.tags.present?
                %span.article__tags
